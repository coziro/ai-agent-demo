{
  "name": "AI Agent Demo",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "containerEnv": {
    "UV_LINK_MODE": "copy"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "anthropic.claude-code",
        "tamasfe.even-better-toml",
        "charliermarsh.ruff",
        "yzhang.markdown-all-in-one"
      ]
    }
  },
  "postCreateCommand": "uv sync && uv pip install -e ."
}
